{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.29.47.4906",
      "templateHash": "2169331753520938462"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "BlazorOpenAIChatPlan"
    },
    "appServiceName": {
      "type": "string",
      "defaultValue": "BlazorOpenAIChat"
    },
    "openAIServiceName": {
      "type": "string",
      "defaultValue": "BlazorOpenAIService"
    },
    "gpt4oDeploymentName": {
      "type": "string",
      "defaultValue": "gpt-4o"
    },
    "adaDeploymentName": {
      "type": "string",
      "defaultValue": "text-embedding-ada-002"
    },
    "useExistingAppServicePlan": {
      "type": "bool",
      "defaultValue": false
    },
    "useExistingOpenAIService": {
      "type": "bool",
      "defaultValue": false
    },
    "useExistingGpt4oDeployment": {
      "type": "bool",
      "defaultValue": false
    },
    "useExistingAdaDeployment": {
      "type": "bool",
      "defaultValue": false
    },
    "gitHubRepoUrl": {
      "type": "string",
      "defaultValue": "https://github.com/mhackermsft/BlazorAIChat"
    }
  },
  "resources": [
    {
      "condition": "[not(parameters('useExistingAppServicePlan'))]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "F1",
        "tier": "Free"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServiceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureOpenAIChatCompletion:Endpoint",
              "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('openAIServiceName')), '2022-12-01').endpoint]"
            },
            {
              "name": "AzureOpenAIChatCompletion:ApiKey",
              "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('openAIServiceName')), '2022-12-01').apiKey]"
            },
            {
              "name": "AzureOpenAIChatCompletion:Model",
              "value": "[parameters('gpt4oDeploymentName')]"
            },
            {
              "name": "AzureOpenAIChatCompletion:SupportsImages",
              "value": "true"
            },
            {
              "name": "AzureOpenAIEmbedding:Model",
              "value": "[parameters('adaDeploymentName')]"
            },
            {
              "name": "RequireEasyAuth",
              "value": "false"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', parameters('openAIServiceName'))]"
      ]
    },
    {
      "condition": "[not(parameters('useExistingOpenAIService'))]",
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2022-12-01",
      "name": "[parameters('openAIServiceName')]",
      "location": "[parameters('location')]",
      "kind": "OpenAI",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "apiProperties": {
          "apiType": "OpenAI"
        }
      }
    },
    {
      "condition": "[not(parameters('useExistingGpt4oDeployment'))]",
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2022-12-01",
      "name": "[format('{0}/{1}', parameters('openAIServiceName'), parameters('gpt4oDeploymentName'))]",
      "properties": {
        "model": "gpt-4o"
      },
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', parameters('openAIServiceName'))]"
      ]
    },
    {
      "condition": "[not(parameters('useExistingAdaDeployment'))]",
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2022-12-01",
      "name": "[format('{0}/{1}', parameters('openAIServiceName'), parameters('adaDeploymentName'))]",
      "properties": {
        "model": "text-embedding-ada-002"
      },
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', parameters('openAIServiceName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/sourcecontrols",
      "apiVersion": "2021-02-01",
      "name": "[format('{0}/web', parameters('appServiceName'))]",
      "properties": {
        "repoUrl": "[parameters('gitHubRepoUrl')]",
        "branch": "main",
        "isManualIntegration": false,
        "deploymentRollbackEnabled": true,
        "isMercurial": false
      }
    }
  ]
}